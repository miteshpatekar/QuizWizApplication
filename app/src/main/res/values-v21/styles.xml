<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowTitleBackgroundStyle">@style/ActionBar</item>
        <!-- <item name="android:background">@drawable/bluebackground</item>-->
        <item name="android:windowBackground">@drawable/bluebackground</item>
        <item name="android:colorPrimary">#FF7043</item>

        <!--  <item name="android:windowBackground">@color/custom_theme_color</item>
         <item name="android:colorBackground">@color/custom_theme_color</item>-->
    </style>

    <style name="ActionBar">
        <item name="android:colorPrimary">#FF7043</item>
        <item name="android:textColor">#FF7043</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:background">#B3E5FC</item>
        <item name="android:textColorHint">#009688</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="buttonTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#002447</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#454545</item>
        <item name="android:typeface">monospace</item>
        <!--<item name="android:background">#f0f0f0</item>-->
        <!--<item name="android:textStyle"></item>-->
        <item name="android:padding">5dp</item>
    </style>

</resources>