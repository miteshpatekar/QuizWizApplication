<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quizwiz.QuizQuestions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/heading">
        <TextView android:text="player1" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player1Text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />

        <TextView android:text="Points:0" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player1Points"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/player1Text"
            android:textSize="20dp" />



        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/imageView2"
            android:src="@drawable/clock"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="4"
            android:id="@+id/timerText"
            android:textSize="20dp"
            android:textColor="#ffff231d"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="9dp"
            android:layout_marginTop="3dp" />

        <TextView android:text="player2" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player2Text"
            android:textSize="20dp"
            android:layout_alignTop="@+id/player1Text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView android:text="Points:0" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player2Points"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_below="@id/player2Text"
            android:textSize="20dp" />
        </RelativeLayout>


    <TextView android:text="In which header file is the NULL macro defined?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="stdio.h"
        android:id="@+id/buttonA"
        android:onClick="onClickA"
        android:background="@drawable/button_style"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_below="@+id/questionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="stdlib.h"
        android:id="@+id/buttonB"
        android:onClick="onClickB"
        android:background="@drawable/button_style"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_below="@+id/buttonA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="stdio.h and stddef.h"
        android:id="@+id/buttonC"
        android:onClick="onClickC"
        android:background="@drawable/button_style"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_below="@+id/buttonB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="math.h"
        android:id="@+id/buttonD"
        android:onClick="onClickD"
        android:background="@drawable/button_style"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_below="@+id/buttonC"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true" />

